

@using CarsApiPythonMvcUI.Models
@model List<Car>
@{var i = 1; }


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Advert</th>
            <th scope="col">Brand</th>
            <th scope="col">Color</th>
            <th scope="col">Transmission</th>
            <th scope="col">Price</th>
            <th scope="col">Year</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@i</th>
                <td>@item.Advert</td>
                <td>@item.Brand</td>
                <td>@item.Color</td>
                <td>@item.Transmission</td>
                <td>@item.Price</td>
                <td>@item.Year</td>
            </tr>
            i++;
        }
    </tbody>
</table>